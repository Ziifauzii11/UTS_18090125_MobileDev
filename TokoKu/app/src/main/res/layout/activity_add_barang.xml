<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.data_barang._add.AddBarangActivity"
    android:padding="@dimen/far">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">


        <EditText
            android:id="@+id/etAddBarangBarcode"
            android:hint="barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_light"/>

        <EditText
            android:id="@+id/etAddBarangNamaBarang"
            android:hint="nama barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal"
            android:background="@drawable/background_light"/>

        <EditText
            android:id="@+id/etAddBarangKategori"
            android:hint="kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal"
            android:background="@drawable/background_light"/>


        <EditText
            android:id="@+id/etAddBarangHargaBeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal"
            android:background="@drawable/background_light"
            android:hint="harga beli"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etAddBarangHargaJual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal"
            android:background="@drawable/background_light"
            android:hint="harga jual"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btAddBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/background_dark"
            android:layout_marginTop="@dimen/normal"
            android:text="Tambahkan"
            android:textColor="@color/colorFree" />

    </LinearLayout>

</ScrollView>